# deqp external fragment_shading_rate build

import("//build/ohos.gni")
import("//third_party/vk-gl-cts/vk_gl_cts.gni")

config("deqp_vk_fragment_shading_rate_config") {
  cflags_cc = deqp_common_cflags_cc
  defines = deqp_common_defines

  #defines += [ "_XOPEN_SOURCE=600" ]
}

ohos_source_set("deqp_vk_fragment_shading_rate_source") {
  sources = [
    "//third_party/vk-gl-cts/external/vulkancts/modules/vulkan/fragment_shading_rate/vktAttachmentRateTests.cpp",
    "//third_party/vk-gl-cts/external/vulkancts/modules/vulkan/fragment_shading_rate/vktFragmentShadingRateBasic.cpp",
    "//third_party/vk-gl-cts/external/vulkancts/modules/vulkan/fragment_shading_rate/vktFragmentShadingRatePixelConsistency.cpp",
    "//third_party/vk-gl-cts/external/vulkancts/modules/vulkan/fragment_shading_rate/vktFragmentShadingRateTests.cpp",
  ]

  include_dirs = deqp_vk_common_include_dirs
  include_dirs += [ "//third_party/vk-gl-cts/external/vulkancts/modules/vulkan/fragment_shading_rate" ]

  deps = [
    #  "//third_party/vk-gl-cts/framework/common:libdeqp_tcutil",
    #  "//third_party/vk-gl-cts/external/vulkancts/framework/vulkan:libdeqp_vkutil",
  ]

  configs = [ ":deqp_vk_fragment_shading_rate_config" ]
}
ohos_static_library("libdeqp_vk_fragment_shading_rate") {
  deps = [ ":deqp_vk_fragment_shading_rate_source" ]
  part_name = "acts"
  subsystem_name = "xts"
}
